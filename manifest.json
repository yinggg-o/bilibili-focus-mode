{
    "manifest_version": 3,
    "name": "Bilibili Unhooked",
    "version": "1.0",
    "description": "Hide parts of bilibili that are unneeded/addictive:recommendations,related videos,comments",
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions":[
        "https://www.bilibili.com/*",
        "https://www.bilibili.com/video/*"],
    "background":{
        "service_worker":"background.js"
    },
    "action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.bilibili.com/*"],
        "js": ["content.js"],
        "css":["homepage.css"],
        "html": ["custom_homepage.html"] ,
        "run_at": "document_start"
      }
    ]
  }
  